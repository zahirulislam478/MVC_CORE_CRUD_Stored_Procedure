            <div class="form-group row mb-1">
                <span class="col-6 offset-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"> Save</i></button>
                    <a asp-action="Index" asp-controller="Foods" class="btn btn-secondary"><i class="bi bi-arrow-return-left"> Back to index</i></a>
                </span>
            </div>
        </form>
    </div>
</div>
